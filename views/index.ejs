<body>
    <%- include("./partials/homeNavbar.ejs") %>

    <div class="container">
        <% articles.forEach((article) => { %>
            <br />
            <div class="card">
                <div class="card-header">
                    <h3> <%= article.title %>  </h3>
                    <h6> Category: <%= article.category.title %> </h6>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %> "><button class="btn btn-primary">Read more</button></a>
                </div>
            </div>
        <% }) %> 
       
    </div>
</body>

