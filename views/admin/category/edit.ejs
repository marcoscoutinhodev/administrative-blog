    <div class="container">
        <hr>
        
        <div class="card">
            <div class="card-header">
                <h2>Category Edit: </h2>
            </div>

            <div class="card-body">
                <form method="POST" action="/admin/category/update">
                    <input class="form-control" type="text" name="title" placeholder="Enter the category title" value="<%= category.title %>">
