<%- include("../../partials/header.ejs") %>

<body>
    <%- include("../../partials/navbar.ejs") %>

    <div class="container">
        <hr>
        <h2>Categories</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach((category) => { %>
                    <tr>
                        <td> <%= category.id %> </td>
                        <td> <%= category.title %> </td>
                        <td> <%= category.slug %> </td>
                        <td> <%= category.id %> </td>
                    </tr>
                <% })  %> 
            </tbody>
        </table>
    </div>
</body>

